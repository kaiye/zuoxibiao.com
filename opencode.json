{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "anthropic-proxy": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Anthropic Proxy",
      "options": {
        "baseURL": "{env:ANTHROPIC_BASE_URL}",
        "apiKey": "{env:ANTHROPIC_API_KEY}"
      },
      "models": {
        "claude-sonnet-4": {
          "name": "Claude Sonnet 4",
          "limit": {
            "context": 200000,
            "output": 65536
          }
        },
        "claude-3-5-sonnet": {
          "name": "Claude 3.5 Sonnet",
          "limit": {
            "context": 200000,
            "output": 8192
          }
        }
      }
    }
  }
}
