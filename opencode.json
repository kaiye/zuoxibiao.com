{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "anthropic": {
      "npm": "@ai-sdk/anthropic",
      "name": "Anthropic Claude (Proxy)",
      "options": {
        "baseURL": "{env:ANTHROPIC_BASE_URL}/v1",
        "apiKey": "{env:ANTHROPIC_API_KEY}"
      },
      "models": {
        "claude-sonnet-4-5-20250929": {
          "name": "Claude Sonnet 4.5"
        }
      }
    }
  },
  "agent": {
    "build": {
      "permission": {
        "question": "deny",
        "read": "allow",
        "edit": "allow",
        "write": "allow",
        "bash": "allow",
        "glob": "allow",
        "grep": "allow",
        "task": "allow",
        "todowrite": "allow",
        "todoread": "allow",
        "webfetch": "allow",
        "doom_loop": "allow"
      },
      "steps": 20
    }
  }
}
